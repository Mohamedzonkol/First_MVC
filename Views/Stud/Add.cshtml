@model Student

@{
    SelectList depts;
    if (Model != null)
    {
        depts = new SelectList(ViewBag.Depts, "Id", "Name", Model.Dept);
    }
    else
    {
        depts = new SelectList(ViewBag.Depts, "Id", "Name");
    }
}
<form method="post" asp-action="SaveAdd" asp-controller="Stud">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span class="text-danger" asp-validation-for="Age"></span>
    </div>
    <div>
        <label asp-for="Adress"></label>
        <input asp-for="Adress" class="form-control" />
        <span class="text-danger" asp-validation-for="Adress"></span>
    </div>
    <div>
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form-control" />
        <span class="text-danger" asp-validation-for="Image"></span>
    </div>
    <div>
        <label asp-for="Dept"></label>
        <select asp-for="Dept" asp-items="depts" class="form-control">
            <option>--Depts--</option>
        </select>
        <span class="text-danger" asp-validation-for="Dept"></span>

    </div>
    <input type="submit" class="btn btn-success" value="Save" />
</form>
<br />

<a asp-action="Index" asp-controller="Stud" class="btn btn-success">back To List</a>

