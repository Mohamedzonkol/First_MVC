@*Tag Helper*@
@model Student
@{
    SelectList deptlists = new SelectList(ViewBag.Department, "Id", "Name", Model.Dept);
}
<form asp-action="saveEdit" asp-controller="Stud" asp-route-id="@Model.Id">
     <input asp-for="Id" type="hidden"  class="form-control" />
     <div>
        <label asp-for="Name"></label>
        <input asp-for="Name"  class="form-control" />
        <span class="text-danger " asp-validation-for="Name"></span>
    </div>
    <div>
       <label asp-for="Age"></label>
       <input asp-for="Age" class="form-control"/>
       <span class="text-danger" asp-validation-for="Age"></span>
    </div>
   <div>
        <label asp-for="Adress"></label>
        <input asp-for="Adress" class="form-control" />
        <span class="text-danger" asp-validation-for="Adress"></span>
  </div>
   <div>
       <label asp-for="Image"></label>
       <input asp-for="Image"  class="form-control" />
       <span class="text-danger" asp-validation-for="Image"></span>
  </div>
   <div>
        <label asp-for="Dept" ></label>
        <select asp-for="Dept" asp-items="deptlists" class="form-control">
            <option>--Depts--</option>
        </select>
        <span class="text-danger" asp-validation-for="Dept"></span>
        
    </div>
    <input type="submit" class="btn btn-success" value="Save" />
</form>
